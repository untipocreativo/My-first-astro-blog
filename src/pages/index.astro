---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Pablo Cuesta - Web Designer</title>
  </head>
  <body class="bg-gray-900 text-white">
    <header class="container mx-auto px-4 py-16 text-center">
      <h1 class="text-5xl font-bold">Pablo Cuesta</h1>
      <p class="mt-4 text-xl text-gray-400">
        I'm a web designer looking for a job.
      </p>
	  <button class="realistic-button">
		<div class="blob1"></div>
		<div class="blob2"></div>
		<div class="realistic-inner">Hire me</div>
	  </button>
    </header>

    <main class="container mx-auto px-4">
      <section id="featured-projects" class="py-16">
        <h2 class="text-center text-3xl font-bold">Featured Projects</h2>
        <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          <div class="rounded-lg bg-gray-800 p-8">
            <h3 class="text-2xl font-bold">Plytix</h3>
            <p class="mt-4 text-gray-400">
              A short description of the project.
            </p>
            <a
              href="#"
              class="mt-8 inline-block font-bold text-blue-500 hover:text-blue-600"
              >View project</a
            >
          </div>
          <div class="rounded-lg bg-gray-800 p-8">
            <h3 class="text-2xl font-bold">Utopicreative</h3>
            <p class="mt-4 text-gray-400">
              A short description of the project.
            </p>
            <a
              href="#"
              class="mt-8 inline-block font-bold text-blue-500 hover:text-blue-600"
              >View project</a
            >
          </div>
          <div class="rounded-lg bg-gray-800 p-8">
            <h3 class="text-2xl font-bold">Maria Hoyos Yoga</h3>
            <p class="mt-4 text-gray-400">
              A short description of the project.
            </p>
            <a
              href="#"
              class="mt-8 inline-block font-bold text-blue-500 hover:text-blue-600"
              >View project</a
            >
          </div>
        </div>
      </section>

      <section id="contact" class="py-16">
        <h2 class="text-center text-3xl font-bold">Contact</h2>
        <form class="mt-8 max-w-lg mx-auto">
          <div class="mb-4">
            <label for="name" class="block text-gray-400">Name</label>
            <input
              type="text"
              id="name"
              class="w-full rounded-lg bg-gray-800 px-4 py-2"
            />
          </div>
          <div class="mb-4">
            <label for="email" class="block text-gray-400">Email</label>
            <input
              type="email"
              id="email"
              class="w-full rounded-lg bg-gray-800 px-4 py-2"
            />
          </div>
          <div class="mb-4">
            <label for="message" class="block text-gray-400">Message</label>
            <textarea
              id="message"
              class="w-full rounded-lg bg-gray-800 px-4 py-2"
              rows="4"></textarea>
          </div>
          <button
            type="submit"
            class="w-full rounded-full bg-blue-500 px-8 py-4 font-bold text-white hover:bg-blue-600"
            >Send message</button
          >
        </form>
      </section>
    </main>

    <footer class="container mx-auto px-4 py-8 text-center text-gray-400">
      <p>&copy; 2023 John Doe. All rights reserved.</p>
    </footer>
  </body>
</html>
